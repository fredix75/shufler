{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
<div class="row">
	<span class="error">{{ form_errors(form.email) }}</span>
	{{ form_label(form.email, 'form.email', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	<div class="col-sm-6 col-md-6">
		{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'form.email'}}) }}
	</div>
</div>
<div class="row">
	<span class="error">{{ form_errors(form.username) }}</span>
	{{ form_label(form.username, 'form.username', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	<div class="col-sm-6 col-md-6">
		{{ form_widget(form.username, {'attr': {'class': 'form-control' , 'placeholder': 'form.username'}}) }}
	</div>
</div>
<div class="row">
	<span class="error">{{ form_errors(form.plainPassword.first) }}</span>
	{{ form_label(form.plainPassword.first, 'form.password', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	<div class="col-sm-6 col-md-6">
		{{ form_widget(form.plainPassword.first) }}
	</div>
</div>
<div class="row">
	{{ form_label(form.plainPassword.second, 'form.password_confirmation', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	<div class="col-sm-6 col-md-6">
		{{ form_widget(form.plainPassword.second) }}
	</div>
</div>
{{form_rest(form) }}<div class="submit">
   	<input id="register_submit" type="submit" class= "btn btn-primary" value="{{ 'registration.submit'|trans }}" />
</div>
{{ form_end(form) }}
{% endblock fos_user_content %}
{% block javascripts %}

{% endblock %}
