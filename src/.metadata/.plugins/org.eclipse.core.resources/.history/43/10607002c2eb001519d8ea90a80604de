{% block javascripts %}
	{{ parent() }}
	<script>
	$(function(){

		$('#shufler_shuflerbundle_video_published').bootstrapSwitch();
		
		if($('#shufler_shuflerbundle_video_categorie').val()!=2){
			$('#genre').hide();
		}

		{% if videokey is not null %}
			$('#shufler_shuflerbundle_video_lien').val('https:{{ videokey }}');
			completeInfos();
		{% endif %}
		
	});

	$('#shufler_shuflerbundle_video_lien').on('keyup',function(){
		completeInfos();
	});
	
	
	$('#shufler_shuflerbundle_video_annee').on('keyup',function(){
		if($('#shufler_shuflerbundle_video_annee').val().length==4){
			selPeriode();
		}
	});

		function completeInfos(){
			var lien=$('#shufler_shuflerbundle_video_lien').val();
			
			if(lien.indexOf('youtube')>0){
				// ceci est ma propre clé. Dans le doute, je bénéficie de celle d'un bédot qui l'a laissée trainer
				var makey='AIzaSyBNgi3EddUNsFThnFQpPt3RR9kkuWmhHdo';

				makey='AIzaSyBdMuJQlbzDhJs0Ujhvzx2ucsO30lcP0OQ';
				
				var match = $('#shufler_shuflerbundle_video_lien').val().match(/(?:https?:\/{2})?(?:w{3}\.)?youtu(?:be)?\.(?:com|be)(?:\/watch\?v=|\/)([^\s&]+)/);
		
				var video_id=match[1];
				
				//var url='https://www.googleapis.com/youtube/v3/videos?id='+video_id+'&key='+key+'&fields=items(id,snippet(channelId,title,categoryId),statistics)&part=snippet,statistics';
				$.get('https://www.googleapis.com/youtube/v3/videos?key='+makey, {	id: video_id, part: 'snippet' }, function(result) {			 
				    if(result.items[0].id) {
				    	$('#shufler_shuflerbundle_video_auteur').val(result.items[0].snippet.title);
				    	$('#shufler_shuflerbundle_video_titre').val(result.items[0].snippet.title);
				    } else {
				        alert('La vidéo n\'existe pas');
				    }
				},'jsonp');
			}else if (lien.indexOf('vimeo')){
				var part=lien.split('/');
				var key=part[part.length-1];
				url='http://vimeo.com/api/v2/video/'+key+'.json';
				$.get('http://vimeo.com/api/v2/video/'+key+'.json', {	id: key }, function(result) {
					$('#shufler_shuflerbundle_video_auteur').val(result[0].user_name);
					$('#shufler_shuflerbundle_video_titre').val(result[0].title);
					$('#shufler_shuflerbundle_video_annee').val(result[0].upload_date.substring(0,4));
					selPeriode();
				}, 'jsonp');
			}
		}
				
		function selPeriode(){
			
			var annee=$('#shufler_shuflerbundle_video_annee').val();
	
			if(annee<=2030 && annee>=2016){
					var periode=$('#shufler_shuflerbundle_video_periode option[value="2016-2030"]');
					periode.attr("selected", "selected");
				}else if(annee<=2015 && annee>=2001){
					var periode=$('#shufler_shuflerbundle_video_periode option[value="2001-2015"]');
					periode.attr("selected", "selected");
				}else if(annee<=2000 && annee>=1986){
					var periode=$('#shufler_shuflerbundle_video_periode option[value="1986-2000"]');
					periode.attr("selected", "selected");
				}else if(annee<=1985 && annee>=1971){
					var periode=$('#shufler_shuflerbundle_video_periode option[value="1971-1985"]');
					periode.attr("selected", "selected");
				}else if(annee<=1970 && annee>=1956){
					var periode=$('#shufler_shuflerbundle_video_periode option[value="1956-1970"]');
					periode.attr("selected", "selected");
				}else if(annee<=1955 && annee>=1940){
					var periode=$('#shufler_shuflerbundle_video_periode option[value="1940-1955"]');
					periode.attr("selected", "selected");
				}else if(annee<=1939 && annee>=1890){
					var periode=$('#shufler_shuflerbundle_video_periode option[value="<1939"]');
					periode.attr("selected", "selected");
				}else{
					alert('Cette année semble incorrecte!')
			}
		}
				
		$('#shufler_shuflerbundle_video_categorie').on('change',function(){
			if($('#shufler_shuflerbundle_video_categorie').val()==2){
				$('#genre').show();
			}else{
				$('#genre option[value=-1]').attr('selected','selected');
				$('#genre').hide();
			}
		});

	</script>
	<script type="text/javascript" src="{{ asset('bundles/shuflershufler/js/bootstrap-switch.js') }}"></script>
{% endblock %}	